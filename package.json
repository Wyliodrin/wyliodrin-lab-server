{
    "name": "wyliodrin-lab-server",
    "description": "Main server for Wyliodrin Pi education software",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "run": "nodemon ./src/server/bin/server.js",
        "debug": "DEBUG=* nodemon ./src/server/bin/server.js",
        "start": "grunt && nodemon ./build/server/bin/server.js"
    },
    "dependencies": {
        "debug": "^2.6.9",
        "dotenv": "^6.0.0",
        "express": "~4.16.0",
        "fs-extra": "^7.0.0",
        "http-errors": "~1.6.2",
        "http-status-codes": "^1.3.0",
        "mongodb": "^3.1.0",
        "mongoose": "^5.2.4",
        "morgan": "~1.9.0",
        "nodemailer": "^4.6.7",
        "popper.js": "^1.14.3",
        "uuid": "^3.3.2",
        "validator": "^10.4.0",
        "vueify": "^9.4.1"
    },
    "devDependencies": {
        "bootbox": "^4.4.0",
        "bootstrap": "^4.1.3",
        "eslint-plugin-vue": "^4.7.1",
        "grunt": "^1.0.3",
        "grunt-browserify": "^5.3.0",
        "grunt-contrib-clean": "^1.1.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-less": "^2.0.0",
        "grunt-eslint": "^21.0.0",
        "jquery": "^3.3.1",
        "lodash": "^4.17.10",
        "nodemon": "^1.18.3",
        "vue": "^2.5.16",
        "vue-resource": "^1.5.1",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true
        },
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "script"
        },
        "plugins": [],
        "extends": [
            "eslint:recommended",
            "plugin:vue/essential"
        ],
        "rules": {
            "indent": [
                "error",
                "tab",
                {
                    "SwitchCase": 1
                }
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "no-console": [
                "warn"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "require-await": [
                "error"
            ]
        }
    }
}